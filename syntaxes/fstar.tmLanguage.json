{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "F*",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.fstar",
				"match": "\\b(module|open|let|in|match|with|if|then|else|val|fun|type|effect|new_effect|sub_effect|begin|end)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.fstar",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.fstar",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.fstar",
					"match": "//.*"
				},
				{
					"include": "#commentblock"
				}
			]
		},
		"commentblock": {
			"patterns": [
				{
					"name": "comment.block.fstar",
					"begin": "\\(\\*",
					"beginCaptures" : {
						"0" : {
							"name": "punctuation.definition.comment.begin.fstar"
						}
					},
					"end": "(\\*\\))",
					"endCaptures": {
						"1": {
							"name": "punctuation.definition.comment.end.fstar"
						}
					},
					"patterns" : [
						{ 
							"include": "#commentblock"
						}		
					]
				}
			]

		}
	},
	"scopeName": "source.fst"
}