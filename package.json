{
	"name": "fstar-vscode-assistant",
	"description": "An interactive editing mode for F*",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "0.1.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/FStarLang/fstar-vscode-assistant"
	},
	"publisher": "FStarLang",
	"icon": "resources/icons/fstar-logo.png",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "fstar",
				"aliases": [
					"F*",
					"fstar"
				],
				"extensions": [
					".fst",
					".fsti"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "fstar",
				"scopeName": "source.fst",
				"path": "./syntaxes/fstar.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"commands": [
			{
				"command": "fstar-vscode-assistant/verify-to-position",
				"title": "Verify to position",
				"category": "F*"
			},
			{
				"command": "fstar-vscode-assistant/restart",
				"title": "Restart",
				"category": "F*"
			},
			{
				"command": "fstar-vscode-assistant/lax-to-position",
				"title": "Lax to position",
				"category": "F*"
			}
		],
		"keybindings": [
			{
				"command": "fstar-vscode-assistant/verify-to-position",
				"key": "ctrl+.",
				"when": "editorTextFocus"
			},
			{
				"command": "fstar-vscode-assistant/restart",
				"key": "ctrl+; ctrl+.",
				"when": "editorTextFocus"
			},
			{
				"command": "fstar-vscode-assistant/lax-to-position",
				"key": "ctrl+shift+.",
				"when": "editorTextFocus"
			}
		]
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"mocha": "^9.2.1",
		"typescript": "^4.8.4"
	}
}
